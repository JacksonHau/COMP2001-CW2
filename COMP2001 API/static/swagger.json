{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Trail API",
        "description": "API documentation for the Trail application."
    },
    "host": "127.0.0.1:5000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/users": {
            "get": {
                "summary": "Get all users",
                "responses": {
                    "200": {
                        "description": "List of all users",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "User_ID": { "type": "integer" },
                                    "Username": { "type": "string" },
                                    "Name": { "type": "string" },
                                    "Created_On": { "type": "string", "format": "date" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": { "type": "integer" },
                                "Username": { "type": "string" },
                                "Name": { "type": "string" },
                                "Created_On": { "type": "string", "format": "date" }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/trails": {
            "get": {
                "summary": "Get all trails",
                "responses": {
                    "200": {
                        "description": "List of all trails",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "Trail_ID": { "type": "integer" },
                                    "Trail_Name": { "type": "string" },
                                    "Description": { "type": "string" },
                                    "Distance": { "type": "number" },
                                    "Created_On": { "type": "string", "format": "date" },
                                    "User_ID": { "type": "integer" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new trail",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Trail_ID": { "type": "integer" },
                                "Trail_Name": { "type": "string" },
                                "Description": { "type": "string" },
                                "Distance": { "type": "number" },
                                "Created_On": { "type": "string", "format": "date" },
                                "User_ID": { "type": "integer" }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Trail created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/trails/{trail_id}": {
            "get": {
                "summary": "Get trail by ID",
                "parameters": [
                    {
                        "name": "trail_id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Trail details",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Trail_ID": { "type": "integer" },
                                "Trail_Name": { "type": "string" },
                                "Description": { "type": "string" },
                                "Distance": { "type": "number" },
                                "Created_On": { "type": "string", "format": "date" },
                                "User_ID": { "type": "integer" }
                            }
                        }
                    },
                    "404": {
                        "description": "Trail not found"
                    }
                }
            },
            "put": {
                "summary": "Update a trail",
                "parameters": [
                    {
                        "name": "trail_id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Trail_Name": { "type": "string" },
                                "Description": { "type": "string" },
                                "Distance": { "type": "number" },
                                "Created_On": { "type": "string", "format": "date" },
                                "User_ID": { "type": "integer" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Trail updated successfully"
                    },
                    "404": {
                        "description": "Trail not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete a trail",
                "parameters": [
                    {
                        "name": "trail_id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Trail deleted successfully"
                    },
                    "404": {
                        "description": "Trail not found"
                    }
                }
            }
        }
    }
}
