{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Trail API",
    "description": "API documentation for the Trail API microservice."
  },
  "host": "127.0.0.1:5000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Use 'Bearer <your-token>' to authenticate."
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "User Login",
        "description": "Authenticate a user and return a JWT token if credentials are valid.",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Email": { "type": "string", "example": "user@example.com" },
                "Password": { "type": "string", "example": "password123" }
              },
              "required": ["Email", "Password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication successful",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": { "type": "string" }
              }
            }
          },
          "401": { "description": "Invalid credentials" },
          "500": { "description": "An error occurred during login" }
        }
      }
    },
    "/trails": {
      "get": {
        "summary": "Get All Trails",
        "description": "Retrieve a list of all trails.",
        "responses": {
          "200": {
            "description": "List of trails",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Trail_ID": { "type": "integer" },
                  "Trail_Name": { "type": "string", "maxLength": 255 },
                  "Description": { "type": "string", "nullable": true },
                  "Country_ID": { "type": "integer", "nullable": true },
                  "State_ID": { "type": "integer", "nullable": true },
                  "City_ID": { "type": "integer", "nullable": true },
                  "Distance": { "type": "number", "format": "float" },
                  "Created_On": { "type": "string", "format": "date" },
                  "Elevation_Gain": { "type": "integer", "nullable": true },
                  "Estimated_Time": { "type": "integer", "nullable": true },
                  "Route_Type": { "type": "string", "enum": ["Point to Point", "Out & Back", "Loop"], "nullable": true },
                  "User_ID": { "type": "integer" }
                }
              }
            }
          },
          "500": { "description": "Error fetching trails" }
        }
      },
      "post": {
        "summary": "Create New Trail",
        "description": "Add a new trail to the database.",
        "parameters": [
          {
            "in": "body",
            "name": "trail",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Trail_Name": { "type": "string", "example": "Mountain Path", "maxLength": 255 },
                "Description": { "type": "string", "example": "A scenic mountain path", "nullable": true },
                "Country_ID": { "type": "integer", "example": 44, "nullable": true },
                "State_ID": { "type": "integer", "example": 10, "nullable": true },
                "City_ID": { "type": "integer", "example": 5, "nullable": true },
                "Distance": { "type": "number", "example": 10.5, "format": "float" },
                "Created_On": { "type": "string", "format": "date", "example": "2025-01-04" },
                "Elevation_Gain": { "type": "integer", "example": 200, "nullable": true },
                "Estimated_Time": { "type": "integer", "example": 120, "nullable": true },
                "Route_Type": { "type": "string", "enum": ["Point to Point", "Out & Back", "Loop"], "example": "Loop", "nullable": true },
                "User_ID": { "type": "integer", "example": 1 }
              },
              "required": ["Trail_Name", "Distance", "Created_On", "User_ID"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Trail created successfully" },
          "400": { "description": "Invalid input" },
          "422": { "description": "Validation error" }
        }
      }
    },
    "/trails/{Trail_ID}": {
      "get": {
        "summary": "Get Trail By ID",
        "description": "Retrieve details of a specific trail.",
        "parameters": [
          {
            "in": "path",
            "name": "Trail_ID",
            "required": true,
            "type": "integer",
            "description": "ID of the trail to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Trail details",
            "schema": {
              "type": "object",
              "properties": {
                "Trail_ID": { "type": "integer" },
                "Trail_Name": { "type": "string", "maxLength": 255 },
                "Description": { "type": "string", "nullable": true },
                "Country_ID": { "type": "integer", "nullable": true },
                "State_ID": { "type": "integer", "nullable": true },
                "City_ID": { "type": "integer", "nullable": true },
                "Distance": { "type": "number", "format": "float" },
                "Created_On": { "type": "string", "format": "date" },
                "Elevation_Gain": { "type": "integer", "nullable": true },
                "Estimated_Time": { "type": "integer", "nullable": true },
                "Route_Type": { "type": "string", "enum": ["Point to Point", "Out & Back", "Loop"], "nullable": true },
                "User_ID": { "type": "integer" }
              }
            }
          },
          "404": { "description": "Trail not found" }
        }
      },
      "put": {
        "summary": "Update Trail",
        "description": "Update details of an existing trail.",
        "parameters": [
          {
            "in": "path",
            "name": "Trail_ID",
            "required": true,
            "type": "integer",
            "description": "ID of the trail to update"
          },
          {
            "in": "body",
            "name": "trail",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Trail_Name": { "type": "string", "maxLength": 255 },
                "Description": { "type": "string", "nullable": true },
                "Country_ID": { "type": "integer", "nullable": true },
                "State_ID": { "type": "integer", "nullable": true },
                "City_ID": { "type": "integer", "nullable": true },
                "Distance": { "type": "number", "format": "float" },
                "Elevation_Gain": { "type": "integer", "nullable": true },
                "Estimated_Time": { "type": "integer", "nullable": true },
                "Route_Type": { "type": "string", "enum": ["Point to Point", "Out & Back", "Loop"], "nullable": true },
                "User_ID": { "type": "integer" }
              },
              "required": ["Trail_Name", "Distance", "User_ID"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Trail updated successfully" },
          "404": { "description": "Trail not found" },
          "400": { "description": "Invalid input" }
        }
      },
      "delete": {
        "summary": "Delete Trail",
        "description": "Remove a trail from the database.",
        "parameters": [
          {
            "in": "path",
            "name": "Trail_ID",
            "required": true,
            "type": "integer",
            "description": "ID of the trail to delete"
          }
        ],
        "responses": {
          "200": { "description": "Trail deleted successfully" },
          "404": { "description": "Trail not found" }
        }
      }
    }
  }
}
